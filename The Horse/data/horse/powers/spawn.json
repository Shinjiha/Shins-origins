{
    "hidden": true,
    "type": "origins:multiple",
    "horse_shape": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1
    },
    "spawn": {
        "name": "Horse",
        "hidden": false,
        "description": "You're a horse.",
        "type": "origins:action_on_callback",
        "entity_action_chosen": {
            "type": "origins:execute_command",
            "command": "walkers switchShape @p minecraft:horse"
        },
        "execute_chosen_when_orb": true,
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "walkers switchShape @p normal"
        },
        "entity_action_respawned": {
            "type": "origins:execute_command",
            "command": "walkers switchShape @p minecraft:horse"
        }
    },
    "human": {
        "type": "origins:active_self",
        "key": "key.origins.secondary_active",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "horse:spawn_horse_shape",
                "comparison": "==",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "walkers switchShape @p normal"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "horse:spawn_horse_shape",
                        "change": 0
                    }
                ]
            },
            "else_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "walkers switchShape @p minecraft:horse"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "horse:spawn_horse_shape",
                        "change": 1
                    }
                ]
            }
        },
        "cooldown": 20,
        "hud_render": {
            "should_render": true
        }
    }
}